<Window x:Class="Restaraunt.Forms.EditSupliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaraunt.Forms" xmlns:maskBox="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="EditSupliers" Height="550" Width="360" 
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
         Icon="/Images/logo.ico">

    <Border
        CornerRadius="5" Background="#FFFFFF"
        >
        <Grid  Margin="25 15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Кнопка закрытия в правом верхнем углу -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Style="{StaticResource textblockSemiBoold}"
                       FontSize="20"
                     >Изменение <LineBreak/>поставщика</TextBlock>

                <Button Grid.Column="1" HorizontalAlignment="Right" 
                Style="{StaticResource BtnImage}" Click="Button_Click"/>

            </Grid>


            <StackPanel Grid.Row="1" >
                <TextBox x:Name="qTytle" Style="{StaticResource pcaholderText}" 
                         Width="310"
                         Height="50" 
                         Tag="Введите наименование" Margin="0 20 0 0" PreviewTextInput="qTytle_PreviewTextInput"/>

                <TextBox x:Name="qName" Style="{StaticResource pcaholderText}" 
                         Width="310"
                         Height="50" 
                         PreviewTextInput="qName_PreviewTextInput"
                         Tag="Введите имя" Margin="0 20 0 0"/>

                <TextBox x:Name="qLastName" Style="{StaticResource pcaholderText}" 
                         Width="310"
                         Height="50" 
                         Margin="0 20"
                         Tag="Введите фамилию"
                         PreviewTextInput="qLastName_PreviewTextInput"/>

                <TextBox x:Name="qEmail" Style="{StaticResource pcaholderText}" 
                         Width="310"
                         Height="50" 
                         Tag="Введите почту"/>

                <maskBox:MaskedTextBox Style="{StaticResource pcaholderText}"  
                                       Width="310"
                                                       x:Name="qPhone"
                                                       Mask="+7 (###) ###-##-##"
                                                       Margin="0 10"/>
                <TextBox x:Name="qAdress" Style="{StaticResource pcaholderText}" 
                         Width="310"
                         Height="50" 
                         Tag="Введите адрессс"/>
            </StackPanel>

            <Grid Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ClearClientBtn"
                            Grid.Column="0"
                        Style="{StaticResource btnStyleSmall}" 
                        Height="35" Width="135"
                        Content="Отичистить" Click="ClearClientBtn_Click"/>

                <StackPanel Grid.Column="1">
                    <Button x:Name="AddClientBtn" HorizontalAlignment="Left"
      
                        Style="{StaticResource btnStyle}" 
                        Height="35" Width="135"
                        Content="Изменить" Click="AddClientBtn_Click" Margin="40,0,0,0"/>
                </StackPanel>

            </Grid>
        </Grid>
    </Border>
</Window>
