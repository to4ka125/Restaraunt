<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="ComboBox" TargetType="ComboBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="/Restaraunt;component/Fonts/#Montserrat Alternates"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <!-- Main Border with ToggleButton -->
                        <Border x:Name="Border"
                            CornerRadius="10"
                            BorderThickness="0.5"
                            BorderBrush="#ADADAD"
                                HorizontalAlignment="Stretch"
                            Background="{TemplateBinding Background}">

                            <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      ClickMode="Press">

                                <Grid>
                                    <!-- Selected Item Display -->
                                    <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="12,3,30,3"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>

                                    <!-- Placeholder Text (shown when no item selected) -->
                                    <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding Tag}"
                                            Margin="12,3,30,3"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           Opacity="0.6"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                                </Grid>
                            </ToggleButton>
                        </Border>

                        <!-- Dropdown Arrow Icon -->
                        <Path x:Name="Arrow"
                          Data="M0,0 L4,4 8,0 Z"
                          Fill="#333"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"
                          Stretch="Uniform"
                          Width="8"
                          RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Path.RenderTransform>
                        </Path>

                        <!-- Dropdown Popup -->
                        <Popup x:Name="Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           Focusable="False"
                           PopupAnimation="Slide">

                            <Border CornerRadius="0 0 10 10"
                                 BorderThickness="0.5"
                                 BorderBrush="#ADADAD"
                                 Background="White"
                                 SnapsToDevicePixels="True"
                >

                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Padding="0">
                                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Show placeholder when no item selected -->
                        <Trigger Property="SelectedItem" Value="{x:Null}">
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Hover Effects -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#666"/>
                        </Trigger>

                        <!-- Dropdown Open Effects -->
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#0078D7"/>
                            <Setter TargetName="Arrow" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Style for ComboBox Items -->
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="FontFamily" Value="/Restaraunt;component/Fonts/#Montserrat Alternates"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="12,6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="ItemBorder"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="True">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Hover Effect -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>

                                    <!-- Selected Item -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#E1E1E1"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>